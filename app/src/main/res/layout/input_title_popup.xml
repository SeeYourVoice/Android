<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:text="회의 제목을 입력하세요."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTitleSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#000000"
        android:text="완료"
        app:layout_constraintEnd_toEndOf="@+id/edtNewtitle"
        app:layout_constraintStart_toStartOf="@+id/edtNewtitle"
        app:layout_constraintTop_toBottomOf="@+id/edtNewtitle" />

    <EditText
        android:id="@+id/edtNewtitle"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="제목"
        android:inputType="text"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/tvinput"
        app:layout_constraintStart_toStartOf="@+id/tvinput"
        app:layout_constraintTop_toBottomOf="@+id/tvinput" />


</androidx.constraintlayout.widget.ConstraintLayout>